<%= form_for(@user) do |f|%>
<%= f.fields_for :personal do |personal_form| %>
	<%= personal_form.label :first_name, "Full Name" %>
	<%= personal_form.text_field :first_name, placeholder: 'Full Name', :required => true %><br>
	<%= personal_form.label :company_name, 'Company or Organization' %>
	<%= personal_form.text_field :company_name, placeholder: 'Company or Organization'%><br>
	<%= f.label :email, 'Email' %>
	<%= f.email_field :email, :autofocus => true, placeholder: 'Email address', :required => true %><br>
	<%= f.label :password, 'Password' %>
	<%= f.password_field :password, placeholder: 'Password', :required => true %><br>
	<%= f.label :password_confirmation, 'Password Confirmation' %>
	<%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', :required => true %><br>
	<%= f.submit 'Register', class: 'btn btn-lg btn-success' %>
<% end %>
<% end %>